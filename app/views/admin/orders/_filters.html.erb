<% if @allow_filter %>
  <%= filters_for polymorphic_path([:admin, @user, Order]), remote: true do |filter| %>
    <div class="filters-inner mb20">
      <div class="row">
        <!-- Filter list start -->
<%= filter.on :status, label: 'status', as: :select, options: options_for_select(Status.select_options, params[:status] || %Q[]), input_html: { prompt: 'All' } %>
<%= filter.on :by_date_from, label: 'by_date_from', as: :date %>
<%= filter.on :by_date_to, label: 'Date to', as: :date %>
<%= filter.on :by_keyword_search, label: 'search by', as: :string %>
        <!-- Filter list end -->
        <%= render partial: 'shared/filter_controls' %>
      </div>
    </div>
  <% end %>
<% end %>
