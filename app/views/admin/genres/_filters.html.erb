<% if @allow_filter %>
  <%= filters_for polymorphic_path([:admin, Genre]), remote: true do |filter| %>
    <div class="filters-inner mb20">
      <div class="row">
        <!-- Filter list start -->
<%= filter.on :by_active_status, label: 'Active status', as: :select, options: options_for_select([[Genre.new(active: true).human_active, true], [Genre.new(active: false).human_active, false]], params[:by_active_status] || %Q[]), input_html: { prompt: 'All' } %>
<%= filter.on :by_keyword, label: 'search by', as: :string %>
        <!-- Filter list end -->
        <%= render partial: 'shared/filter_controls' %>
      </div>
    </div>
  <% end %>
<% end %>
