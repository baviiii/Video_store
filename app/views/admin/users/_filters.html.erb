<% if @allow_filter %>
  <%= filters_for polymorphic_path([:admin, User]), remote: true do |filter| %>
    <div class="filters-inner mb20">
      <div class="row">
        <!-- Filter list start -->
<%= filter.on :search, label: 'search by', as: :string %>
<%= filter.on :active_selector, label: 'Active status', as: :select, options: options_for_select([[User.new(active: true).human_active, true], [User.new(active: false).human_active, false]], params[:active_selector] || %Q[]), input_html: { prompt: 'All' } %>
        <!-- Filter list end -->
        <%= render partial: 'shared/filter_controls' %>
      </div>
    </div>
  <% end %>
<% end %>
